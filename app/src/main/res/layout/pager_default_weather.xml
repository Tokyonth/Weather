<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/transparent">

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <com.tokyonth.weather.util.EnglishTextView
            android:layout_marginTop="146dp"
            android:id="@+id/weather_temp_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/text_view_padding"
            android:layout_marginBottom="12dp"
            android:gravity="center"
            android:textSize="46sp"
            android:textStyle="bold"
            android:textColor="@color/colorWhite"
            tools:text="32"/>

        <ImageView
            android:id="@+id/weather_line_iv"
            android:layout_width="60dp"
            android:layout_height="1dp"
            android:background="@android:color/white" />

        <TextView
            android:id="@+id/weather_forecast_hourly_tips_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:layout_marginTop="28dp"
            android:gravity="center"
            android:textSize="15sp"
            android:lineSpacingExtra="4dp"
            android:textColor="@color/colorWhite"
            tools:text="24小时内\n无雨"/>

        <TextView
            android:id="@+id/weather_forecast_day_tips_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:gravity="center"
            android:textSize="15sp"
            android:lineSpacingExtra="4dp"
            android:textColor="@color/colorWhite"
            tools:text="未来7天内\n无雨"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:gravity="bottom"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <ImageView
                android:id="@+id/weather_update_iv"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/icon_update"
                android:layout_marginTop="12dp"
                android:tint="@android:color/white"
                android:layout_marginRight="12dp"/>

            <com.tokyonth.weather.util.EnglishTextView
                android:id="@+id/weather_update_time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/text_view_padding"
                android:gravity="center_vertical"
                android:textSize="14sp"
                android:textColor="@color/colorWhite"
                tools:text="17:50:45"/>

        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/weather_hourly_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:overScrollMode="never"/>

        <include layout="@layout/content_weather_msg"/>

    </LinearLayout>

    <include
        layout="@layout/pager_aqi_weather"/>

    <include
        layout="@layout/pager_daily_weather"/>

    <include
        layout="@layout/pager_index_weather"/>

</LinearLayout>

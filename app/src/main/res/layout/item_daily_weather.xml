<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="4dp"
    android:paddingBottom="4dp"
    xmlns:tools="http://schemas.android.com/tools">

    <com.tokyonth.weather.util.EnglishTextView
        android:id="@+id/item_daily_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:padding="@dimen/text_view_padding"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:textColor="@color/colorWhite"
        android:textSize="16sp"
        tools:text="17"/>

    <TextView
        android:id="@+id/item_daily_week_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/item_daily_time_tv"
        android:paddingTop="@dimen/text_view_padding"
        android:paddingBottom="@dimen/text_view_padding"
        android:layout_centerVertical="true"
        android:textColor="@color/colorWhite"
        tools:text="星期一"/>

    <ImageView
        android:id="@+id/item_daily_weather_image_iv"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="16dp"
        android:tint="@color/colorWhite"
        tools:src="@drawable/weather_cloudy"/>

    <com.tokyonth.weather.util.EnglishTextView
        android:id="@+id/item_daily_temp_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/item_daily_weather_image_iv"
        android:layout_marginRight="24dp"
        android:textSize="26sp"
        android:gravity="center"
        android:textColor="@android:color/white"
        tools:text="26"/>

</RelativeLayout>
